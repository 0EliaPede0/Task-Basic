<!DOCTYPE html>
<html lang="it">
<head>
    <link rel="shortcut icon" type="image/x-icon" href="favicon_pede.ico" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bangladino</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bangladino.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="dropdown" @* class="container-fluid" *@ >
                <img src="/css/IMG/Donuts.png" class="img-center" height="50" width="50" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home Page</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div  class="dropbtn" @*class="navbar-collapse collapse d-sm-inline-flex justify-content-between"*@ >
                    <ul class="navbar-nav flex-grow-1">
                      @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                      *@
                        <li  class="dropdown-content" @* class="nav-item"*@ >
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tasks" asp-action="Index">Note</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="TaskFlags" asp-action="Index">Note con spunta</a>
                           @* <a class="nav-link text-dark" asp-area="" asp-controller="TEST" asp-action="Index">Test</a> *@
                        </li>
                         
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Test - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
